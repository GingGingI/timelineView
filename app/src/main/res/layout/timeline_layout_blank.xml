<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <!--Title-->

    <TextView
            android:id="@+id/timelineTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="환승"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_margin="4dp"

            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/timelineContent"/>

    <!--Content-->

    <TextView
            android:id="@+id/timelineContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="약 5분 소요"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_margin="4dp"

            android:layout_marginLeft="45dp"
            app:layout_constraintStart_toStartOf="@+id/timelineTitle"
            app:layout_constraintTop_toBottomOf="@id/timelineTitle"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>